<script type="text/javascript">
    $(document).ready(function() {
        $('#SecuredpartySet_0__SelectedPartyFavoriteId').change(function (e) {
            var selectedId = $('#SecuredpartySet_0__SelectedPartyFavoriteId').val();
            $.get('getFavoriteParty/' + selectedId, function (data, status) {
                if(status=='success')
                    pasteResult(data);
            });
        });
    });
    
    function pasteResult(data) {
        $("input[name='SecuredpartySet[0].FirstName']").val(data.FirstName);
        $("input[name='SecuredpartySet[0].MiddleName']").val(data.MiddleName);
        $("input[name='SecuredpartySet[0].LastName']").val(data.LastName);
        $("input[name='SecuredpartySet[0].Suffix']").val(data.Suffix);
        $("input[name='SecuredpartySet[0].OrganizationName']").val(data.OrganizationName);
    }

</script>

